{
  "name": "incident-training-rpg",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.13.5"
  },
  "scripts": {
    "build": "npm run --workspaces build",
    "test": "npm run --workspaces test",
    "test:e2e": "npm run -w apps/api test:e2e",
    "test:layout-overflow": "playwright test apps/web/tests/layout-overflow.spec.ts",
    "check:visual-budget": "node scripts/check-visual-budget.mjs",
    "capture:visual": "node scripts/capture-visual-snapshots.mjs",
    "asset:gen": "node scripts/generate-game-asset.mjs",
    "asset:gen:openai": "node scripts/generate-game-asset.mjs --provider openai",
    "asset:gen:gemini": "node scripts/generate-game-asset.mjs --provider gemini",
    "asset:build": "node scripts/generate-game-asset.mjs --source scripts/asset-prompts.json --all",
    "asset:list": "node scripts/generate-game-asset.mjs --source scripts/asset-prompts.json --list",
    "dev:api": "npm run -w apps/api dev",
    "dev:web": "npm run -w apps/web dev"
  }
}
